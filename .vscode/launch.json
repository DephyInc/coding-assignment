{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\moderncpp.exe", // Path to your compiled program
            "args": ["write", "dephy.cfg"], // Command-line arguments to pass
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "${workspaceFolder}\\.vscode\\tasks.json", // Task to build your project
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe" // Path to GDB executable
        }
    ]
}
